<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.axy.intelligentcontrolplatform.standing.mapper.TDwBzzxSccjMapper">

    <select id="getMfrs" resultType="com.axy.intelligentcontrolplatform.standing.entity.TDwBzzxSccj">
        SELECT
            *
        FROM
        t_dw_bzzx_sccj t
            <where>
                <if test="objId != null and objId != '' ">
                    and t.obj_id= #{objId}
                </if>
                <if test="sccjbm != null and sccjbm != ''">
                    and t.sccjbm = #{sccjbm}
                </if>
                <if test="sccjmc != null and sccjmc != ''">
                    and t.sccjmc like concat(concat('%',#{sccjmc}),'%')
                </if>
            </where>
    </select>
    <select id="getMfrsCount" resultType="java.lang.Integer">
        SELECT
        count(0)
        FROM
        t_dw_bzzx_sccj t
        <where>
            <if test="objId != null and objId != '' ">
                and t.obj_id= #{objId}
            </if>
            <if test="sccjbm != null and sccjbm != ''">
                and t.sccjbm = #{sccjbm}
            </if>
            <if test="sccjmc != null and sccjmc != ''">
                and t.sccjmc like concat(concat('%',#{sccjmc}),'%')
            </if>
        </where>

    </select>

    <select id="selectMfrs" resultType="com.axy.intelligentcontrolplatform.standing.entity.TDwBzzxSccj">
        SELECT
        t.sccjbm,
        t.sccjmc
        FROM t_dw_bzzx_sccj t
        <where>
            t.sccjbm is not null and t.sccjmc is not null
            <if test="sccjbm != null and sccjbm != '' ">
                and t.sccjbm = #{sccjbm}
            </if>
            <if test="sccjmc != null and sccjmc != '' ">
                and t.sccjmc like concat(concat('%',#{sccjmc}),'%')
            </if>
        </where>
    </select>
</mapper>
