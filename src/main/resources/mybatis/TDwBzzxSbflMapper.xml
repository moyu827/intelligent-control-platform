<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.axy.intelligentcontrolplatform.standing.mapper.TDwBzzxSbflMapper">

    <select id="getPartsType" resultType="com.axy.intelligentcontrolplatform.standing.entity.TDwBzzxSbfl">
        SELECT
        t1.sblx parentName,
        t.*
        FROM
        t_dw_bzzx_sbfl t
        LEFT JOIN t_dw_bzzx_sbfl t1 ON t.fsblxid = t1.obj_id
        <where>
            <if test="objId != null and objId != '' ">
                and t.obj_id= #{objId}
            </if>
            <if test="sblxmc != null and sblxmc != '' ">
                and t.sblxmc like concat(concat('%',#{sblxmc}),'%')
            </if>
            <if test="sblx != null and sblx != '' ">
                and t.sblx like concat(concat('%',#{sblx}),'%')
            </if>
        </where>
    </select>
    <select id="getPartsTypeCount" resultType="java.lang.Integer">
        SELECT
        count(0)
        FROM
        t_dw_bzzx_sbfl t
        LEFT JOIN t_dw_bzzx_sbfl t1 ON t.fsblxid = t1.obj_id
        <where>
            <if test="objId != null and objId != '' ">
                and t.obj_id= #{objId}
            </if>
            <if test="sblxmc != null and sblxmc != '' ">
                and t.sblxmc like concat(concat('%',#{sblxmc}),'%')
            </if>
            <if test="sblx != null and sblx != '' ">
                and t.sblx like concat(concat('%',#{sblx}),'%')
            </if>
        </where>
    </select>
    <select id="selectPartsType" resultType="com.axy.intelligentcontrolplatform.standing.entity.TDwBzzxSbfl">
        SELECT
          t.sblxbm,
          t.sblx
            FROM t_dw_bzzx_sbfl t
        <where>
            t.sblx is not null and t.sblxbm is not null
            <if test="sblx != null and sblx != '' ">
                and t.sblx like concat(concat('%',#{sblx}),'%')
            </if>
            <if test="sblxbm != null and sblxbm != '' ">
                and t.sblxbm = #{sblxbm}
            </if>
        </where>
    </select>
</mapper>
